---
import Layout from '../layouts/Layout.astro';
import LottieLoop from '../components/LottieLoop.tsx';
import IsometricCanvas from '../components/IsometricCanvas.jsx';
import MotionReveal from '../components/MotionReveal.jsx';
import BackgroundManager from '../components/BackgroundManager.tsx';
import Icon from '../components/Icon.tsx';
---

<Layout title="AXIVM Automations - Free 14-Day AI Agent Pilot" description="Deploy one AI agent. Free 14-day pilot. Replace 40+ hours/month with bespoke automationâ€”fully remote, secure, and tailored to your workflow.">
  <!-- Background Manager -->
  <BackgroundManager client:load />
  
  <!-- Navigation -->
  <nav class="glass glass-reflection" style="position: fixed; top: 0; left: 0; right: 0; z-index: 1000; backdrop-filter: var(--glass-blur); border-bottom: 1px solid var(--border);">
    <div class="container">
      <div style="display: flex; justify-content: space-between; align-items: center; padding: 1rem 0; min-height: 44px;">
        <div style="font-family: var(--font-family-mono); font-weight: bold; color: var(--brand); font-size: 1.1rem;">
          AXIVM Automations
        </div>
        <a href="#book-audit" class="button glass-reflection" style="background: var(--brand); border: none; color: white; min-height: 44px; padding: 0.75rem 1.5rem;">
          Book Free Audit
        </a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section style="min-height: 100vh; display: flex; align-items: center; padding-top: 80px; position: relative; background: linear-gradient(rgba(11, 15, 20, 0.3), rgba(11, 15, 20, 0.5)), url('/assets/images/backgrounds/hero-1.jpg'); background-size: cover; background-position: center;">
    <div class="container">
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: clamp(2rem, 4vw, 4rem); align-items: center;">
        <div>
          <h1 style="font-size: clamp(2rem, 8vw, 3.5rem); font-weight: 700; line-height: 1.1; margin-bottom: 1.5rem; background: linear-gradient(135deg, var(--text), var(--brand)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            Deploy one AI agent.<br>
            <span style="color: var(--accent); -webkit-text-fill-color: var(--accent);">Free 14-day pilot.</span>
          </h1>
          <p style="font-size: clamp(1rem, 3vw, 1.25rem); color: var(--muted); margin-bottom: 2rem; line-height: 1.6;">
            Replace 40+ hours/month with a bespoke automationâ€”fully remote, secure, and tailored to your workflow.
          </p>
          <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
            <a href="#book-audit" class="button glass-reflection" style="background: var(--brand); border: none; color: white; font-size: 1.1rem; padding: 1rem 2rem; min-height: 44px;">
              Book Free Audit
            </a>
            <a href="#how-it-works" class="button outline glass" style="border-color: var(--border); color: var(--text); min-height: 44px;">
              See How It Works
            </a>
          </div>
        </div>
        <div>
          <LottieLoop 
            client:load
            src="/animations/tech-waveform.json" 
            className="hero-animation"
            poster="/animations/tech-waveform-poster.svg"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Isometric Accent -->
  <section style="padding: var(--section-padding); background: var(--surface);">
    <div class="container">
      <IsometricCanvas client:visible />
    </div>
  </section>

  <!-- Value Props -->
  <section style="padding: var(--section-padding); background: var(--card);">
    <div class="container">
      <MotionReveal client:visible>
        <h2 style="text-align: center; font-size: clamp(1.5rem, 6vw, 2.5rem); margin-bottom: 3rem; color: var(--text);">
          Why AXIVM Automations?
        </h2>
      </MotionReveal>
      
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2rem;">
        <MotionReveal client:visible delay={0.1}>
          <div class="glass glass-reflection" style="padding: 2rem;">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
              <Icon name="zero-setup" size={32} />
              <h3 style="color: var(--brand); margin: 0;">Zero Setup Time</h3>
            </div>
            <p style="color: var(--muted);">Deploy in 48 hours. No infrastructure, no maintenance, no headaches.</p>
          </div>
        </MotionReveal>
        
        <MotionReveal client:visible delay={0.2}>
          <div class="glass glass-reflection" style="padding: 2rem;">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
              <Icon name="security" size={32} />
              <h3 style="color: var(--accent); margin: 0;">Enterprise Security</h3>
            </div>
            <p style="color: var(--muted);">OAuth only, least privilege access, full audit logs, revocable permissions.</p>
          </div>
        </MotionReveal>
        
        <MotionReveal client:visible delay={0.3}>
          <div class="glass glass-reflection" style="padding: 2rem;">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
              <Icon name="roi" size={32} />
              <h3 style="color: var(--brand); margin: 0;">Proven ROI</h3>
            </div>
            <p style="color: var(--muted);">Average 40+ hours saved monthly. Pay for itself in the first week.</p>
          </div>
        </MotionReveal>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section id="how-it-works" style="padding: var(--section-padding); background: var(--surface);">
    <div class="container">
      <MotionReveal client:visible>
        <h2 style="text-align: center; font-size: clamp(1.5rem, 6vw, 2.5rem); margin-bottom: 3rem; color: var(--text);">
          How It Works
        </h2>
      </MotionReveal>
      
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 3rem;">
        <MotionReveal client:visible delay={0.1}>
          <div style="text-align: center;">
            <div class="glass glass-reflection" style="width: 80px; height: 80px; background: var(--brand); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; font-size: 2rem; font-weight: bold; color: white;">
              1
            </div>
            <h3 style="color: var(--text); margin-bottom: 1rem;">15-min Audit</h3>
            <p style="color: var(--muted);">Quick discovery call to understand your workflow and identify automation opportunities.</p>
