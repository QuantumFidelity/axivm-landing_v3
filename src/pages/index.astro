        </MotionReveal>
      </div>
    </div>
  </section>

  <!-- Integrations Strip -->
  <section style="padding: 4rem 0; background: var(--card);">
    <div class="container">
      <MotionReveal client:visible>
        <h3 style="text-align: center; color: var(--muted); margin-bottom: 2rem; font-size: 1.1rem;">
